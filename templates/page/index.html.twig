{% extends 'base.html.twig' %}

{% block title %}{{ page.pagetitle }} - LS Customs{% endblock %}

{% block content %}

    <hr>
    <h1>{{ page.pagetitle }}</h1>
    <hr>

    {% if page.image is null %}
        <div class="row">
            <div class="col-md-12">
                <div class="row product-container">
                        <div class="col-md-12">
                            <div class="product-item text-center">
                                <p>{{ page.description }}</p>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="row">
            <div class="col-md-12 align-content-center">
                <img src="/uploads/{{ page.image }}" class="img-fluid align-content-center">
            </div>

            <div class="col-md-12">
                <div class="row product-container">
                    <div class="col-md-12">
                        <div class="product-item text-center">
                            <p>{{ page.description }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}
